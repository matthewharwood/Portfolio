{
  "name": "MorningHarwoodPortfolio",
  "version": "2.0.0",
  "description": "",
  "main": "server.js",
  "module": "dist/bundle.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run prerender && npm run bundle",
    "dev": "node ./src/index.js",
    "serve:prod": "npm run prerender && npm run bundle && npx http-server ./dist",
    "prerender": "node prerender.js",
    "start": "node ./bin/www",
    "watch": "nodemon index.js --ext js --ignore dist",
    "bundle": "microbundle src/main.js -f modern -o ./dist/bundle.js --external none"
  },
  "mangle": {
    "regex": "^_"
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-htm",
        {
          "import": "preact"
        }
      ]
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "esm": "^3.2.21",
    "express": "^4.17.1",
    "htm": "^3.0.4",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.6",
    "tailwindcss": "^1.3.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "babel-plugin-htm": "^3.0.0",
    "connect-livereload": "^0.6.1",
    "fs-extra": "^9.0.0",
    "livereload": "^0.9.1",
    "microbundle": "^0.12.0-next.8",
    "nodemon": "^2.0.3"
  }
}
